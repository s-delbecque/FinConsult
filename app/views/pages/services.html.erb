<div class="container">

  <h1 class="text-center">The services I offer</h1>
  <div id="listReceivedRequests" class="d-flex flex-row justify-content-center align-items-center flex-wrap">
    <% @services.each do |service| %>
      <div class="card-service-hidden">
        <div class ="card-service-infos">
          <div class ="d-flex flex-column justify-content-center align-items-center flex-wrap">
            <h2><strong><%= service.category %></strong></h2>
            <h3><strong>â‚¬<%= service.rate_per_day %>/day</strong></h3>
            <p><%= service.description %></p>
            <div class="icons d-flex flex-row justify-content-center align-items-center flex-wrap">
              <% if policy(service).edit? %>
                <%= link_to edit_service_path(service.id)  do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              <% end %>
              <% if policy(service).destroy? %>
                <%= link_to service_path(service.id), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <p><%= link_to "Back to all the services", services_path, class: 'btn-flat'%></p>
</div>

<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">ARE YOU HUNGRY ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= image_tag "BIM.png" %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
