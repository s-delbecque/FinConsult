<div class="container">

  <h1 class="text-center">The services I offer</h1>
  <div class="d-flex flex-row justify-content-center align-items-center flex-wrap">
  <% @services.each do |service| %>
    <div class="card-service">
      <div class ="card-service-user">
        <!-- TODO: LINK THE RIGHT PICTO -->
        <img src="http://sydologie.com/wp-content/uploads/2015/10/capture-decran-2015-10-21-a-16.07.58.png" alt="">
      </div>
      <div class ="card-service-infos d-flex flex-column justify-content-center align-items-center flex-wrap">
        <h2><strong><%= service.category %></strong></h2>
        <h3><strong>â‚¬<%= service.rate_per_day %>/day</strong></h3>
        <p><%= service.description %></p>
        <div class="icons d-flex flex-row justify-content-center align-items-center flex-wrap">
          <% if policy(User).remove_offered_service? %>
            <%= link_to services_delete_path(service.id), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <p><%= link_to "Back to all the services", services_path, class: 'btn-flat'%></p>
</div>
