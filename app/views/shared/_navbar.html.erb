<div class="navbar navbar-expand-sm navbar-light navbar-finconsult">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <p class="d-flex align-items-center">Hi, <%= current_user.first_name %></p>
        <li class="nav-item dropdown">
          <% if !current_user.profile_picture_url %>
            <%= image_tag "undefined.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag current_user.profile_picture, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Add a service", new_service_path, class: "dropdown-item" %>
            <%= link_to "The services I offer", user_services_path, class: "dropdown-item" %>
            <%= link_to "The requests I received", user_received_requests_path, class: "dropdown-item" %>
            <%= link_to "The requests I sent", user_sent_requests_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <ul class="nav-item">
          <li> <%= link_to "Login", new_user_session_path, class: "nav-link" %>  </li>
          <li> <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %> </li>
        </ul>
      <% end %>
    </ul>
  </div>
</div>

